<div class='tab'>
    <div class='column'>
        <div class='header'>
            <h2>Qiita</h2>
        </div>
        <% @qiita_items.each do |item| %>
        <a href='<%= item["url"] %>' class='card-link'>
            <div class='card'>
                <img src='http://cdn.qiita.com/assets/favicons/public/apple-touch-icon-f9a6afad761ec2306e10db2736187c8b.png' class="card-img"/>
                <div class='card-body'>
                    <ul>
                        <li class='card-title'><%= item['title'] %></li>
                    </ul>
                </div>
            </div>
        </a>
        <% end %>
    </div>

    <div class='column'>
        <div class='header'>
            <h2>Products</h2>
        </div>
        <% @products.each do |product| %>
        <a href='<%= product.url %>' class='card-link'>
            <div class='card'>
                <img src='<%= product.image_path %>' class="card-img"/>
                <div class='card-body'>
                    <ul>
                        <li class='card-title'><%= product.title %></li>
                        <li class='card-description'><%= product.technologies %></li>
                    </ul>
                </div>
            </div>
        </a>
        <% end %>
    </div>
</div>